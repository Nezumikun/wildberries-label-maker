extends layout

block content
  h1 Генератор наклеек
  form(
     method='post'
     enctype='multipart/form-data'
  )
    div(class="mb-3")
      label(for="formFile" class="form-label") Выберите файл со списком товаров
      input(class="form-control" type="file" id="file" name="file")

    div(class="accordion" id="accordionExample")
      div(class="accordion-item")
        h2(class="accordion-header")
          button(
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#collapseOne"
            aria-expanded="true"
            aria-controls="collapseOne"
          ) Опции
        div(id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample")
          div(class="accordion-body")
            div(class="mb-3")
              label(class="form-label") Размер 
              div(class="row")
                div(class="col")
                  div(class="input-group")
                    div(class="input-group-text") Ширина
                    input(type="number" class="form-control" placeholder="Ширина в мм" name="page_width" value="58")
                div(class="col")
                  div(class="input-group")
                    div(class="input-group-text") Высота
                    input(type="number" class="form-control" placeholder="Высота в мм" name="page_height" value="40")

    div(class="mb-3 mt-3")
      button(type="submit" class="btn btn-wb") Сгенерировать наклейки
  p
  a(
    href='/files/template.xlsx'
  ) Шаблон для заполнения
  p 
  if err
    div.error
      h2 #{err.message}
      pre #{err.stack}